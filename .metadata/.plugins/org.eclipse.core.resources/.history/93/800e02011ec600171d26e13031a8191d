--DROP TABLE prdwa17_staging.tmp_content;

create table T_CHANNEL 
(
   CODE_CHANNEL         INTEGER                        not null title 'Code Channel',
   T_CHANNELID          VARCHAR(11)                    title 'channelId',
   T_CHANNELDESCRIPTION LONG VARCHAR                   title 'channelDescription',
   T_CHANNELCUSTOMURL   LONG VARCHAR                   title 'channelCustomUrl',
   T_CHANNELCOMMENTSCOUNT INTEGER                        title 'channelCommentsCount',
   T_CHANNELSUBSCRIBERCOUNT INTEGER                        title 'channelSubscriberCount',
   T_CHANNELHIDDENSUBSCRIBERCOUNT INTEGER                        title 'channelHiddenSubscriberCount',
   T_CHANNELVIDEOCOUNT  INTEGER                        title 'channelVideoCount',
   T_CHANNELKEYWORDS    LONG VARCHAR                   title 'channelKeywords',
   constraint PK_T_CHANNEL primary key (CODE_CHANNEL)
)